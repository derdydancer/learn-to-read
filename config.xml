<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.derdydancer.lasresan" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>Läsresan</name>
  <description>En expertpedagog inom svensk läsinlärning för barn.</description>
  <author href="https://github.com/derdydancer/learn-to-read" email="support@volt.build">Derdydancer</author>

  <content src="index.html" />

  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <platform name="android">
    <allow-intent href="market:*" />
    <preference name="AndroidXEnabled" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="35" />
    <edit-config file="app/src/main/res/values/styles.xml" mode="merge" target="/resources/style[@name='AppTheme']">
    <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
      </edit-config>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#E0F7FA" />
  </platform>

  <preference name="Orientation" value="portrait" />
  <preference name="Fullscreen" value="false" />
  <preference name="BackgroundColor" value="#E0F7FA" />

  <!-- Core Plugins (Free Plan) -->
  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-file" />
  <plugin name="cordova-plugin-media" />
  <plugin name="cordova-plugin-dialogs" />
  <plugin name="cordova-plugin-statusbar" />
  <plugin name="cordova-plugin-inappbrowser" />

</widget>
